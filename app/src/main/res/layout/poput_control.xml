<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_toc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/toc"
            android:background="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_marginEnd="40dp"/>

        <ImageButton
            android:id="@+id/btn_text_size_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/textsizeplus"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="40dp"/>

        <ImageButton
            android:id="@+id/btn_text_size_sub"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/textsizesub"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="40dp"/>

        <ImageButton
            android:id="@+id/btn_listen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/listen"
            android:background="@color/colorPrimary"
            android:scaleType="fitXY"/>

    </LinearLayout>

</LinearLayout>